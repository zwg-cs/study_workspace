{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FFmpeg Program", // 调试配置名称（显示在调试菜单）
            "type": "cppdbg", // C/C++ 调试器
            "request": "launch", // 启动新进程（而不是附加到已有进程）
            "program": "${workspaceFolder}/ch1/helloffmpeg", // 要调试的程序（helloffmpeg）
            "args": [], // 命令行参数（如果有）
            "stopAtEntry": false, // 是否在 main() 入口暂停
            "cwd": "${workspaceFolder}", // 工作目录（项目根目录）
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH", // 动态库路径（重要！）
                    "value": "/usr/local/ffmpeg612/lib"
                }
            ], // 环境变量
            "externalConsole": false, // 是否用外部终端（一般 false）
            "MIMode": "gdb", // 使用 GDB 调试器
            "miDebuggerPath": "/usr/bin/gdb", // GDB 路径（远程服务器上的路径）
            "setupCommands": [ // GDB 初始化命令
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile FFmpeg Program" // 调试前先执行编译任务（tasks.json 里的任务）
        }
    ]
}